<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E40088FF"

        tools:context=".CalcVolt">

    <TextView
            android:text="Resistanssi:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resAmountLabel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="380dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:background="#DAD9D9"

            android:ems="10"
            android:id="@+id/resAmountInput" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="380dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:background="#DAD9D9"

            android:ems="10"
            android:id="@+id/currAmountInput" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="184dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"/>
    <TextView
            android:text="Virta:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currAmountLabel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="156dp"/>
    <EditText
            android:layout_width="380dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:background="#DAD9D9"
            android:ems="10"
            android:id="@+id/resultInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="68dp" app:layout_constraintTop_toBottomOf="@+id/calcBtn"
    />
    <Button
            android:text="Laske jännite"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="#837979"
            android:textColor="#D6D5D5"
            android:id="@+id/calcBtn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.495" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/currAmountInput"/>
    <TextView
            android:text="Jännite:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultLabel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/resultInput" android:layout_marginBottom="8dp"/>
</android.support.constraint.ConstraintLayout>