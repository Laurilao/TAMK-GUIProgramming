<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5611168A"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valitse toiminto"
            android:textColor="#0000FF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.526"
            android:layout_marginTop="32dp" android:id="@+id/chooseActivityLabel" android:textSize="30sp"/>
    <Button
            android:text="Resistanssin laskeminen"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/calcResBtn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.501" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="76dp" app:layout_constraintTop_toBottomOf="@+id/chooseActivityLabel"/>
    <Button
            android:text="JÃ¤nnitteen laskeminen"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/calcVoltBtn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/calcResBtn"/>
    <Button
            android:text="Virran laskeminen"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/calcCurrBtn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/calcVoltBtn"/>
    <View
            android:layout_width="176dp"
            android:layout_height="293dp"
            android:id="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chooseActivityLabel" android:layout_marginTop="64dp"
            android:background="#803364B8"/>
    <Button
            android:text="Lopeta sovellus"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/quitBtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/calcCurrBtn" app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/view"/>

</android.support.constraint.ConstraintLayout>