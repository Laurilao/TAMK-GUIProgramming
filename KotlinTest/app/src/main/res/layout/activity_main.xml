<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moi Ella!"
            android:background="#0000FF"
            android:textColor="#FFFFFF"
            android:textSize="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="48dp" android:id="@+id/textView2"/>
    <TextView
            android:text="Valitse väri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/colorLabel" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="104dp" app:layout_constraintHorizontal_bias="0.5"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="30sp"/>
    <Button
            android:text="Vihreä"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectGreen" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="72dp"
            android:layout_marginStart="72dp" app:layout_constraintEnd_toStartOf="@+id/selectRed"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/colorLabel" app:layout_constraintHorizontal_bias="0.301"/>
    <Button
            android:text="Punainen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectRed" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="92dp"
            android:layout_marginRight="92dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/colorLabel"/>

</android.support.constraint.ConstraintLayout>